{
  "name": "browser",
  "version": "0.0.1",
  "description": "HTML rendering engine",
  "main": "source/index.js",
  "scripts": {
    "build": "browserify source/index.js -o dist/index.js",
    "clean": "rm -rf dist/*",
    "test-prepare": "rm -rf dist/test && mkdir dist/test",
    "test-copy": "cp test/index.html dist/test/index.html",
    "test-build": "npm run test-prepare && npm run test-copy && browserify test/index.js -o dist/test/index.js",
    "test-watch": "npm run test-prepare && npm run test-copy && (onchange test/index.html -- /bin/sh -c 'npm run test-copy' & watchify test/index.js -v -d -o dist/test/index.js & node server.js)"
  },
  "keywords": [
    "html",
    "render",
    "layout",
    "browser"
  ],
  "dependencies": {
    "htmlparser2": "~3.7.3",
    "CSSselect": "~0.7.0",
    "domhandler": "~2.2.0",
    "css": "~2.1.0",
    "specificity": "~0.1.4",
    "domelementtype": "~1.1.1",
    "xhr": "~1.17.0",
    "after-all": "~2.0.1",
    "capitalize": "~0.5.0",
    "camelize": "~1.0.0",
    "text-width": "~1.1.0"
  },
  "devDependencies": {
    "brfs": "~1.2.0",
    "browserify": "~6.0.3",
    "onchange": "0.0.2",
    "root": "~1.1.0",
    "send": "~0.9.3",
    "watchify": "^2.2.1"
  },
  "browserify": {
    "transform": [
      "brfs"
    ]
  }
}
